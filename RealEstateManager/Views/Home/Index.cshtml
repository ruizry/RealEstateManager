<div class="row no-gutters m-3 pt-5">
    <div class="card col-sm-12 col-md-10 col-lg-6 mx-auto shadow">
        <div class="card-header text-center">
            <h5 class="m-0">Add a listing</h5>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("CreateProperty", "Home", FormMethod.Post))
            {
                <div class="form-horizontal">
                    <div class="form-group">
                        <label for="firstName" class="col-sm-2 control-label">Home Owner First Name</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="firstName" id="firstName" placeholder="First Name" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="lastName" class="col-sm-2 control-label">Home Owner Last Name</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="lastName" id="lastName" placeholder="Last Name" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="contactNum" class="col-sm-2 control-label">Home Owner Contact Number</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="contactNum" id="contactNum" placeholder="Phone number" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="address" class="col-sm-2 control-label">Property Address</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="address" id="address" placeholder="Street Address" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="firstName" class="col-sm-2 control-label">City</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="city" id="city" placeholder="City" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="state" class="col-sm-2 control-label">State</label>
                        <div class="col-sm-10">
                            <select class="form-control" name="state" id="state">
                                <option value="OR" default>OR</option>
                                <option value="WA">WA</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="firstNameA" class="col-sm-2 control-label">Agent First Name</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="firstNameA" id="firstNameA" placeholder="First Name" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="lastNameA" class="col-sm-2 control-label">Agent Last Name</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="lastNameA" id="lastNameA" placeholder="Last Name" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="contactNumA" class="col-sm-2 control-label">Agent Contact Number</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="contactNumA" id="contactNumA" placeholder="Phone number" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="listingPrice" class="col-sm-2 control-label">Listing Price</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="listingPrice" id="listingPrice" placeholder="Listing Price" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-info">Add Listing</button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<div>
    @Html.ActionLink("View All Listings", "Index", "Listings")
</div>